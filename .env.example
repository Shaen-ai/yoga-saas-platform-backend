# Backend Environment Variables
NODE_ENV=development
PORT=8000

# Database (optional - will work without it)
MONGODB_URI=mongodb://localhost:27017/yoga_saas
SKIP_DB=true

# Authentication
JWT_SECRET=your-secret-key-here
BYPASS_AUTH=false

# Wix Authentication
# Get these from https://dev.wix.com
# 1. Go to your app in Wix Developers Center
# 2. Navigate to OAuth Settings
# 3. Copy your App ID and App Secret
WIX_APP_ID=your-wix-app-id-here
WIX_APP_SECRET=your-wix-app-secret-here
# Skip Wix auth in development (set to false in production)
SKIP_WIX_AUTH=false

# Email (optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# API URLs (for production)
API_BASE_URL=https://your-api-domain.com